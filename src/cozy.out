#!/usr/bin/env python
import random
import sys
import time

RED   = "[1;31m"
GREEN = "[1;32m"
DEFAULT_COLOR = "[00m"

def make_colorizer(c):
    def colorizer(word):
        return "{}{}{}".format(c, word, DEFAULT_COLOR)
    return colorizer

red   = make_colorizer(RED)
green = make_colorizer(GREEN)

crimmas_colorizers = [ red, green ]

def random_case(word):
    return "".join([random.choice([l.upper(), l.lower()]) for l in word])

for word in ['COZY', 'COZY', 'HOME', 'COZY']:
    color = random.choice(crimmas_colorizers)
    for _ in range(5):
        sys.stdout.write(color(random_case(word)))
        sys.stdout.flush()
        sys.stdout.write("\r")
        time.sleep(0.1)

for word in ['COZY', 'COZY', 'COZY', ':3', 'COZY']:
    color = random.choice(crimmas_colorizers)
    for _ in range(5):
        sys.stdout.write(color(random_case(word)))
        sys.stdout.flush()
        sys.stdout.write("\r")
        time.sleep(0.1)
